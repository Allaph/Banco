<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="banco.cursoandroid.com.banco.Conta">

    <TextView
        android:text="Deposito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Saque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValorDepositoId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/textView3"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/ValorDepositoId"
        android:layout_alignStart="@+id/ValorDepositoId"
        android:layout_marginTop="35dp"
        android:id="@+id/SaqueId"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="135dp"
        android:id="@+id/SaldoId"
        android:layout_below="@+id/SaqueId"
        android:layout_alignParentEnd="true"
        tools:ignore="LabelFor" />

    <TextView
        android:text="Saldo Bancario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/SaldoId"
        android:layout_alignBottom="@+id/SaldoId"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Extrato em tela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExtratoId"
        android:layout_marginBottom="55dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ValorDepositoId"
        tools:ignore="LabelFor,RelativeOverlap"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
